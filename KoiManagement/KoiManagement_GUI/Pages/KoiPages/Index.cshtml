@model KoiManagement_GUI.Pages.KoiPages.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Koi[0].Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Koi[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Koi[0].Type)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Koi[0].Variety)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Koi[0].DateOfBirth)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Koi[0].Size)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Koi[0].Image)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Koi[0].Active)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Koi)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Type)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Variety)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateOfBirth)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Size)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Image)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Active)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
