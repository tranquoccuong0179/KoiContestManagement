@page
@model KoiManagement_GUI.Pages.SignupPageModel
@{
}
<body>
	<div class="wrapper">
		<form method="post">
			<h1>Sign up</h1>
			<div class="input-box">
				<input type="text" placeholder="Username" asp-for="UserForRegistration.UserName">
				<i class='bx bxs-user'></i>
				<span asp-validation-for="UserForRegistration.UserName" class="text-danger"></span>
			</div>
			<div class="input-box">
				<input type="text" placeholder="Fullname" asp-for="UserForRegistration.FullName">
				<i class='bx bxs-user'></i>
				<span asp-validation-for="UserForRegistration.FullName" class="text-danger"></span>
			</div>
			<div class="input-box">
				<input type="password" placeholder="Password" asp-for="UserForRegistration.Password">
				<i class='bx bxs-lock-alt'></i>
				<span asp-validation-for="UserForRegistration.Password" class="text-danger"></span>
			</div>
			<div class="input-box">
				<input type="password" placeholder="Confirm password" asp-for="UserForRegistration.ConfirmPassword">
				<i class='bx bxs-lock-alt'></i>
				<span asp-validation-for="UserForRegistration.ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit" class="btn">Sign up</button>
			<div class="register-link">
				<p>Already had an account? <a href="LoginPage">Register</a></p>
			</div>
		</form>
	</div>
</body>
